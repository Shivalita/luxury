{% extends 'base.html.twig' %}

{% block title %}Clients index{% endblock %}

{% block body %}
    <h1>Clients index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Activity</th>
                <th>ContactName</th>
                <th>ContactPosition</th>
                <th>ContactNumber</th>
                <th>ContactMail</th>
                <th>ClientNotes</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for client in clients %}
            <tr>
                <td>{{ client.id }}</td>
                <td>{{ client.name }}</td>
                <td>{{ client.activity }}</td>
                <td>{{ client.contactName }}</td>
                <td>{{ client.contactPosition }}</td>
                <td>{{ client.contactNumber }}</td>
                <td>{{ client.contactMail }}</td>
                <td>{{ client.clientNotes }}</td>
                <td>
                    <a href="{{ path('clients_show', {'id': client.id}) }}">show</a>
                    <a href="{{ path('clients_edit', {'id': client.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('clients_new') }}">Create new</a>
{% endblock %}
